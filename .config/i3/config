# Assign Workspaces 1-6 to the main monitor (HDMI1)
workspace 1 output DP-0
workspace 2 output DP-0
workspace 3 output DP-0
workspace 4 output DP-0
workspace 5 output DP-0
workspace 6 output DP-0

# Assign Workspaces 6-10 to the second monitor (DP1)
workspace 7 output HDMI-0
workspace 8 output HDMI-0
workspace 9 output HDMI-0
workspace 10 output HDMI-0


# Ensure workspaces are moved to the correct output on startup
exec --no-startup-id i3-msg "workspace 1; move workspace to output DP-0"
exec --no-startup-id i3-msg "workspace 2; move workspace to output DP-0"
exec --no-startup-id i3-msg "workspace 3; move workspace to output DP-0"
exec --no-startup-id i3-msg "workspace 4; move workspace to output DP-0"
exec --no-startup-id i3-msg "workspace 5; move workspace to output DP-0"
exec --no-startup-id i3-msg "workspace 6; move workspace to output DP-0"

exec --no-startup-id i3-msg "workspace 7; move workspace to output HDMI-0"
exec --no-startup-id i3-msg "workspace 8; move workspace to output HDMI-0"
exec --no-startup-id i3-msg "workspace 9; move workspace to output HDMI-0"
exec --no-startup-id i3-msg "workspace 10; move workspace to output HDMI-0"

